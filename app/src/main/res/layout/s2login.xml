<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".s2login"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/page_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="178dp"
        android:layout_alignParentBottom="true"
        android:cropToPadding="false"
        app:srcCompat="@drawable/p1_world" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/rectangle_6" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/login_x" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-156dp"
        android:gravity="center"
        android:text="You need to login"
        android:textColor="@color/white"
        android:textSize="29sp"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:text="Don’t worry about the visa We can gurantee it for youDon’t worry about the visa We can gurantee it for you"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/s2_email"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="229dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/login_user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/s2_pass"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="234dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/login_lock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/p2_login"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="162dp"
        android:background="@drawable/rounded_bg"
        android:text="Login"
        android:textColor="@color/faded_orange"
        android:textSize="16sp" />

    <Button
        android:id="@+id/forgot"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:text="Forgot Password?"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <Button
        android:id="@+id/p2_register"
        style="Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/forgot"
        android:layout_marginEnd="58dp"
        android:layout_marginTop="-99dp"
        android:background="@android:color/transparent"
        android:text="Register !"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="188dp"
        android:layout_height="48dp"
        android:layout_below="@+id/forgot"
        android:layout_marginTop="-99dp"
        android:layout_toEndOf="@+id/imageView6"
        android:gravity="center_vertical"
        android:text="You don't have an account?"
        android:textColor="@color/white" />

</RelativeLayout>